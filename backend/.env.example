# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/dropship

# JWT
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_this

# Redis (optional in development)
REDIS_HOST=localhost
REDIS_PORT=6379

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SSLCommerz
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_IS_LIVE=false

# CORS
FRONTEND_URL=http://localhost:5173

# Supplier API (example)
SUPPLIER_API_ENDPOINT=https://api.supplier.com
SUPPLIER_API_KEY=your_supplier_api_key
